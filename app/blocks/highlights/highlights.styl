.highlights
	$dateSize = 70px
	$dateStripe = shade($cyan, 35%)

	display block

	&__item
		display flex
		justify-content space-around
		align-items center
		padding-top $dateSize + 15px
		position relative
		min-height 360px

		&:not(:last-child)
			padding-bottom 40px

		&_reverse
			flex-direction row-reverse

			& ^[0]__content
				text-align left

			+below(720px)
				flex-direction row

				& ^[0]__content
					text-align right

		+below(720px)
			flex-direction column-reverse
			padding-left 60px

	&__image
		min-height 200px

		img
			display block
			max-width 100%
			height auto

	&__image
	&__content
		margin-x 100px
		flex 0 0 35%

		+below(940px)
			margin-x 25px
			flex 0 0 calc(50% - 50px)

		+below(720px)
			margin-x 0
			flex 1 0 auto

	&__mark
		position absolute
		left 50%
		top 0
		transform translateX(-50%)
		height 100%

		&:after
			content ''
			position absolute
			top $dateSize
			left 0
			height 'calc(100% - %s)' % $dateSize
			background-color $dateStripe
			width 1px

		+below(940px)
			&:after
				display none

		+below(720px)
			left 0

			&:after
				display block


	&__date
		size $dateSize
		display block
		position absolute
		top 0
		left -(@width / 2)
		text-align center
		font-weight 600
		font-size 1.05em
		line-height 1.5
		padding 10px 15px
		border-radius 50%
		border 1px solid $dateStripe

	&__month
		display inline-block
		border-bottom 1px solid $dateStripe
		margin-bottom 2px
		text-transform uppercase
		text-decoration none


	&__content
		flex 0 0 35%
		text-align right

		+below(720px)
			margin-top 20px

	&__title
		font-size 1.25em
		text-transform uppercase
		color $cyan
		margin-bottom 10px

		+below(720px)
			font-size 1.1em

	&__lead
		margin-bottom 30px
