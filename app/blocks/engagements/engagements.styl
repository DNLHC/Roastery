.engagements
	display block
	padding-y 70px

	&__list
		display flex
		justify-content space-between
		align-items center
		max-width 82%
		padding-x 110px
		margin-x auto
		position relative

		&:not(:last-child)
			margin-bottom 65px

		&:before
			content attr(aria-label)
			position absolute
			left 0
			top 50%
			font-size 1.12em
			letter-spacing 1px
			text-transform uppercase
			font-weight bold
			transform rotate(-90deg) translateX(-50%)
			transform-origin top left

	&__item
		flex 0 1 170px
		font-size 1rem
		text-align center

	&__value
		font-size 2em
		font-weight 600
		margin 10px 0 15px
		white-space nowrap

	&__label
		font-size 0.96em

	&__icon
		display inline-block
		size 3.4em
		fill #ffffff

	&__separator
		margin-top 20px
