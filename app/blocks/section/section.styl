.section
	display block
	margin-top 120px

	&__title
		font-size 2.4em
		font-weight 400

		+below(720px)
			font-size 2.05em
		+below(520px)
			font-size 1.9em

	&_purple
		background-color $magenta
		background-image embedurl('../../svg/square.svg', 'utf8')
		background-size 50px 50px

	&_shade
		position relative

		&:after
			position absolute
			top 0
			left 0
			size 100%
			background-image linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, .33))
			content ''

		& > *
			position relative
			z-index 2

	&_promo
		margin-top 150px
		margin-bottom 250px

	+below(720px)
		margin-top 95px
		margin-bottom 0
