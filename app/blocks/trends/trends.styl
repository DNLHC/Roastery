.trends
	display block
	margin-bottom 205px
	position relative

	&__box
		height 380px
		border-top 2px solid $cyan
		border-bottom 2px solid $cyan
		position relative
		display flex
		align-items center

	&__marker
		position absolute
		width 250px
		height 380px
		top 50%
		left 0
		margin-top -(@height / 2)

		svg
			size 510px
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			z-index 10

		&:after,
		&:before
			content ''
			position absolute
			width 2px
			height 27%
			left 50%
			transform translateX(-50%)
			background-color $cyan
			z-index -1

		&:before
			top 0

		&:after
			bottom 0

	&__info
		left 50%
		top 50%
		transform translate(-50%, -50%)
		position absolute
		text-align center
		width 185px
		background-color rgba($shadeBlue, .6)
		border-radius 20px
		padding 15px

	&__value
		font-size 45px
		font-weight bold
		letter-spacing 2px

	&__aside
		margin-left auto
		position relative
		max-width 350px
		text-align center
		z-index 150

	#svg-graph
		position absolute
		left 0
		top 0

	&__controls
		display inline-block
		margin-top 20px
